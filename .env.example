# PostgreSQL Database Configuration
# IMPORTANT: Change the password before deploying to production!
POSTGRES_DB=mcp_registry
POSTGRES_USER=mcpregistry
POSTGRES_PASSWORD=CHANGEME_SECURE_PASSWORD_HERE

# Database URLs for services
DATABASE_URL=postgres://mcpregistry:CHANGEME_SECURE_PASSWORD_HERE@postgresql:5432/mcp_registry?sslmode=disable
MCP_REGISTRY_DATABASE_URL=postgres://mcpregistry:CHANGEME_SECURE_PASSWORD_HERE@postgresql:5432/mcp_registry

# Registry Service Configuration
MCP_REGISTRY_ENVIRONMENT=production
MCP_REGISTRY_SEED_IMPORT=true

# GitHub OAuth (required for publishing servers)
# Get these from https://github.com/settings/developers
MCP_REGISTRY_GITHUB_CLIENT_ID=your_github_client_id_here
MCP_REGISTRY_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# JWT Configuration (generate a secure private key)
MCP_REGISTRY_JWT_PRIVATE_KEY=your_jwt_private_key_here

# Admin Service Configuration
POSTGRES_URL=postgres://mcpregistry:CHANGEME_SECURE_PASSWORD_HERE@postgresql:5432/mcp_registry

# Optional: MongoDB (if still using for admin)
MONGODB_URL=mongodb://mongodb:27017

# Proxy Configuration
PROXY_PORT=8090
REGISTRY_URL=http://registry:8080

# API Authentication (for ratings/install endpoints)
# Generate with: openssl rand -hex 32
API_KEY=CHANGEME_GENERATE_SECURE_API_KEY_HERE
